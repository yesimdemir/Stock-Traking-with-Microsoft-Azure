@using StokMVC.Models.Entity;
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-5">
    <table id="tbl1" class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ürün Numarası</th>
                <th>Ürün Adı</th>
                <th>Ürün Markası</th>
                <th>Ürün Kategorisi</th>
                <th>Ürün Fiyatı</th>
                <th>Ürün Stok Adedi</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urn in Model)
            {
                <tr>
                    <td>@urn.URUNID</td>
                    <td>@urn.URUNAD</td>
                    <td>@urn.MARKA</td>
                    <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                    <td>@urn.FIYAT</td>
                    <td>@urn.STOK</td>
                    <td><a href="/Ürün/SIL/@urn.URUNID" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="/Ürün/UrunGetir/@urn.URUNID" class="btn btn-success btn-sm">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-end mt-3">
        <a href="/Ürün/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>
    </div>
</div>

<!-- DataTable CSS and JS -->
<link href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap5.min.js"></script>

<style>
    #tbl1 {
        width: 100%;
    }

        #tbl1 th, #tbl1 td {
            padding: 12px 15px;
        }
</style>

<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
            }
        });
    });
</script>
